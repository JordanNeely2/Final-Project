#!/usr/bin/env python3

import reversi as rv

game = rv.Reversi()
game.printBoard()
game.printPlayer()

#game loop
while (not game.finished):
    
    move = game.getMove()
    while not game.isValidMove(move):
            move = game.getMove()
            
    game.playMove(move) 
    game.printBoard()

    game.changePlayer()
    game.printPlayer()
